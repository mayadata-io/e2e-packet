#!/bin/bash
set -x

pod() {
echo $CI_JOB_ID
###clone e2e-openshift-repo
echo "cloning e2e-openshift repo*************"
sshpass -p $pass ssh -o StrictHostKeyChecking=no $user@$ip -p 1658 'git clone https://github.com/mayadata-io/e2e-packet.git'
sshpass -p $pass ssh -o StrictHostKeyChecking=no $user@$ip -p 1658 'cd e2e-packet && git checkout k8s-1-16 && bash script/3-functional/Volume-Capacity/volume-capacity node '"'$CI_JOB_ID'"''
}

node() {
job_id=$(echo $1)
echo "*********Applying e2e-crd***********"
kubectl apply -f packet/utils/e2e-crd.yml

echo "****Creating e2e-crd********"
cat packet/utils/e2e-result.yml > volume-capacity-$job_id.yml
sed -i -e "s/<test-phase>/Running/g" -e "s/<test-name>/volume-capacity/g" -e"s/<job_id>/$job_id/g" volume-capacity-$job_id.yml

time="date"
current_time=$(eval $time)
sed -i -e "s/<test-init>/$current_time/g" -e "s/<openebs-id>/0.8.1/g" volume-capacity-$job_id.yml
kubectl apply -f volume-capacity-$job_id.yml
cat volume-capacity-$job_id.yml

echo "*******Deploying Application****"
sleep 5
echo "      Application-Deployment: Pass" >> volume-capacity-$job_id.yml
cat volume-capacity-$job_id.yml
kubectl apply -f volume-capacity-$job_id.yml

echo "*******Generating load**********"
sleep 5
echo "      Application-Loadgen: Pass" >> volume-capacity-$job_id.yml
cat volume-capacity-$job_id.yml
kubectl apply -f volume-capacity-$job_id.yml

echo "*******Performing the load to fill the volumes************"
sleep 5
echo "      Volume-Capacity: Fail" >> volume-capacity-$job_id.yml
cat volume-capacity-$job_id.yml
kubectl apply -f volume-capacity-$job_id.yml

echo "*******Deprovisioning Application******"
sleep 5
echo "      Application-Deprovisioning: Pass" >> volume-capacity-$job_id.yml
cat volume-capacity-$job_id.yml
kubectl apply -f volume-capacity-$job_id.yml

current_time=$(eval $time)
sed -i -e "s/<test-finish>/$current_time/g" volume-capacity-$job_id.yml
sed -i -e "s/<test-result>/Fail/g" volume-capacity-$job_id.yml
cat volume-capacity-$job_id.yml
}

if [ "$1" == "node" ];then
  node $2
else
  pod
fi