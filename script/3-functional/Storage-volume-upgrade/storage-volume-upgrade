#!/bin/bash
set -x

pod() {
echo $CI_JOB_ID
###clone e2e-packet-repo
echo "cloning e2e-packet repo*************"
sshpass -p $pass ssh -o StrictHostKeyChecking=no $user@$ip -p 1658 'git clone https://github.com/mayadata-io/e2e-packet.git'
sshpass -p $pass ssh -o StrictHostKeyChecking=no $user@$ip -p 1658 'cd e2e-packet && git checkout k8s-1-16 && bash script/3-functional/Storage-volume-upgrade/storage-volume-upgrade node '"'$CI_JOB_ID'"''
}

node() {
job_id=$(echo $1)
echo "*********Applying e2e-crd***********"
kubectl apply -f script/utils/e2e-crd.yml

echo "****Creating e2e-crd********"
cat script/utils/e2e-result.yml > storage-vol-upgrade-$job_id.yml
sed -i -e "s/<test-phase>/Running/g" -e "s/<test-name>/storage-vol-upgrade/g" -e"s/<job_id>/$job_id/g" storage-vol-upgrade-$job_id.yml

time="date"
current_time=$(eval $time)
sed -i -e "s/<test-init>/$current_time/g" -e "s/<openebs-id>/0.8.1/g" storage-vol-upgrade-$job_id.yml
kubectl apply -f storage-vol-upgrade-$job_id.yml
cat storage-vol-upgrade-$job_id.yml

echo "*******Deploying Application****"
sleep 5
echo "      Application-Deployment: Pass" >> storage-vol-upgrade-$job_id.yml
cat storage-vol-upgrade-$job_id.yml
kubectl apply -f storage-vol-upgrade-$job_id.yml

echo "*******Generating load**********"
sleep 5
echo "      Application-Loadgen: Pass" >> storage-vol-upgrade-$job_id.yml
cat storage-vol-upgrade-$job_id.yml
kubectl apply -f storage-vol-upgrade-$job_id.yml

echo "*******Upgrading storage volume************"
sleep 5
echo "      Storage-Vol-Upgrade: Fail" >> storage-vol-upgrade-$job_id.yml
cat storage-vol-upgrade-$job_id.yml
kubectl apply -f storage-vol-upgrade-$job_id.yml

echo "*******Deprovisioning Application******"
sleep 5
echo "      Application-Deprovisioning: Pass" >> storage-vol-upgrade-$job_id.yml
cat storage-vol-upgrade-$job_id.yml
kubectl apply -f storage-vol-upgrade-$job_id.yml
source ~/.profile
current_time=$(eval $time)
sed -i -e "s/<test-finish>/$current_time/g" storage-vol-upgrade-$job_id.yml
sed -i -e "s/<test-result>/Fail/g" storage-vol-upgrade-$job_id.yml
sed -i -e "s/Running/Completed/g" storage-vol-upgrade-$job_id.yml
cat storage-vol-upgrade-$job_id.yml
}

if [ "$1" == "node" ];then
  node $2
else
  pod
fi